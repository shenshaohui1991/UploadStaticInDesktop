html,
body {
    width: 100%;
    height: 100%;
    font: 14px/1.5  arial, helvetica, sans-serif, PingFang, "Microsoft YaHei", "Microsoft JhengHei", 'MingLiu';
}

.wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    padding-top: 30px;
    background: #f7f5f2;
}

.drag-area {
    width: 450px;
    height: 210px;
    margin: 0 auto 30px;
    color: #40444f;
    border: 2px dashed #40444f;
    border-radius: 20px;
    z-index: 10;
    transition: all .5s;
    // 导致页面在接受到拖拽的文件时，会自动跳转
    // pointer-events: none;

    &:hover {
        color: #616778;
        border-color: #9a9fad;
    }

    &.active {
        border-color: #74b51c;
    }

    figure {
        width: 100px;
        height: 100px;
        margin: 30px auto 0;
        background: url(../img/dragAreaBg.png) no-repeat center/100px;
    }

    p {
        margin: 10px 0 0 0;
        text-align: center;
    }

    .small {
        margin-top: 5px;
        font-size: 12px;
        color: #999;
    }
}

.files-pane {
    height: 370px;
}

.files.table-striped {
    table-layout:fixed

    th,
    td {
        padding: 2px 8px;
    }

    tr:active:nth-child(2n) {
        background-color: #f5f5f4;
        color: #333;
    }

    tr:active:nth-child(2n+1) {
        background-color: white;
        color: #333;
    }

    .file-status {
        width: 42px;
    }

    .file-name {
        width: 156px;
    }

    .file-type {
        width: 96px;
    }

    .file-size {
        width: 76px;
    }

    .file-operator {
        width: 42px;
    }

    .fail,
    .success,
    .loading {
        em {
            display: block;
            width: 16px;
            height: 16px;
        }
    }

    .fail em {
        background: url(../img/fail.png) center no-repeat;
    }

    .success em {
        background: url(../img/success.png) center no-repeat;
    }

    .loading em {
        background: url(../img/loading.png) center no-repeat;
        -webkit-animation: rotate .5s infinite linear;
        animation: rotate .5s infinite linear;
    }
}

.toolbar-footer {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
}

.radio, .checkbox {
    float: left;
    margin: 0 20px;
}

@-webkit-keyframes rotate {
    100% {
        -webkit-transform: rotate(360deg);
    }
}
@keyframes rotate {
    100% {
        transform: rotate(360deg);
        -webkit-transform: rotate(360deg);
    }
}